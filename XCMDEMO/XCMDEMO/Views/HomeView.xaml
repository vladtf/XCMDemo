<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XCMDEMO.Views.HomeView"
             xmlns:vm="clr-namespace:XCMDEMO.ViewModels"
             xmlns:cm="clr-namespace:Caliburn.Micro.Xamarin.Forms;assembly=Caliburn.Micro.Xamarin.Forms"
             xmlns:local="clr-namespace:XCMDEMO"
             xmlns:v="clr-namespace:XCMDEMO.Views">

    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="5" Margin="5">
            <Label Text="{Binding TestText}" />

            <Grid VerticalOptions="Start">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="Sandbox" Clicked="Sandbox_Clicked"
                        Text="SandBox" Grid.Column="0" />
                <Button x:Name="Work" Text="Work" Grid.Column="1"
                        cm:Message.Attach="[Event Clicked] = [Action Work]" />
            </Grid>

            <StackLayout VerticalOptions="CenterAndExpand">
                <ContentView cm:View.Model="{Binding SandBox}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>